<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
  xmlns:gap   = "http://phonegap.com/ns/1.0"
  id          = "com.phonegap.example"
  versionCode = "10"
  version     = "1.0.0" >

  <!-- versionCode is optional and Android only -->

  <name>Buy XP!</name>

  <description>
    Compra por Buy XP!
  </description>

  <author href="https://buy-xp.com" email="miguel.artica@alexim.com">
    Alexim Systems
  </author>
  <content src="index.html" />
  <preference name="orientation" value="portrait" />
  <plugin name="cordova-plugin-inappbrowser" spec="1.7.1" />
  <platform name="android">
    <icon src="img/icono1.png" qualifier="ldpi" />
    <icon src="img/icono1.png" qualifier="mdpi" />
    <icon src="img/icono1.png" qualifier="hdpi" />
    <icon src="img/icono1.png" qualifier="xhdpi" />
    <icon src="img/icono1.png" qualifier="xxhdpi" />
    <icon src="img/icono1.png" qualifier="fr-xxhdpi" />

    <splash src="img/splash.png" qualifier="ldpi" />
    <splash src="img/splash.png" qualifier="mdpi" />
    <splash src="img/splash.png" qualifier="hdpi" />
    <splash src="img/splash.png" qualifier="xhdpi" />
    <splash src="img/splash.png" qualifier="fr-xhdpi" />
    <splash src="img/splash.png" qualifier="port-xxhdpi" />
    <splash src="img/splash.png" qualifier="land-xxhdpi" />
  </platform>
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  

</widget>